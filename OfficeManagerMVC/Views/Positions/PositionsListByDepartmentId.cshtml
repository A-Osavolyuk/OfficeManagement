@model IEnumerable<Position>
@{
    ViewData["Title"] = "List of Positions";
}

<h1>List of Positions with Department ID: @Model.First().DepartmentId</h1>

<p>
    <a asp-controller="Positions" asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Position ID
            </th>
            <th>
                Position Name
            </th>
            <th class="text-end">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="mt-2">
                        @Html.DisplayFor(modelItem => item.PositionId)
                    </div>
                </td>
                <td>
                    <div class="mt-2">
                        @Html.DisplayFor(modelItem => item.PositionName)
                    </div>
                </td>
                <td>
                    <div class="text-end">
                        <a class="btn btn-info w-25" asp-action="details" asp-controller="positions" asp-route-id="@item.PositionId">Details</a>
                        <a class="btn btn-primary w-25" asp-action="update" asp-controller="positions" asp-route-id="@item.PositionId">Edit</a>
                        <a class="btn btn-danger w-25" asp-action="delete" asp-controller="positions" asp-route-id="@item.PositionId">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>