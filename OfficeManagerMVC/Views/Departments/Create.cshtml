@model DepartmentDto

@{
    ViewData["Title"] = "Create Department";
}

<h1>Create Department</h1>
<hr />

<div class="row">
    <div class="m-auto col-sm-4">
        <div class="card">
            <form asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DepartmentName" class="control-label"></label>
                        <input asp-for="DepartmentName" class="form-control" />
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>

                    <input type="submit" value="Create" class="btn btn-success" />
                    <a asp-action="departmentsList" asp-controller="departments" class="btn btn-primary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}